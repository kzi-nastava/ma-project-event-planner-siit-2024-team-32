<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DisplayCompanyInfoFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Naslov -->
        <TextView
            android:id="@+id/creationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISPLAY COMPANY INFORMATION"
            android:textColor="@color/orange"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="igonik@gmail.com"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="1234"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/first_name_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Igor"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/last_name_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nikolic"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Springfield"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="My company"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/country_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Serbia"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/city_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Uzice"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/address_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Vidovdanska 43"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/phone_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="0656754466"
            android:background="@drawable/textview_border"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"
            android:cursorVisible="false"
            android:inputType="none" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>