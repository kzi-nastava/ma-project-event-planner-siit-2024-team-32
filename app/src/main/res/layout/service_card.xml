<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:background="@drawable/textview_border"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        android:id="@+id/product_card_item"
        android:onClick="goToServiceEditActivity"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:text="Music Band MeoWow"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="132dp"
                android:layout_height="62dp"

                android:text="60min-"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="85dp"
                android:layout_height="72dp"

                android:text="90min"
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/by"
                android:layout_width="220dp"
                android:layout_height="50dp"

                android:text="by:Super Cat"
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal
">

            <TextView
                android:id="@+id/serviceCategory"
                android:layout_width="198dp"
                android:layout_height="51dp"

                android:text="Category:Music"
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/money1"
                android:layout_width="126dp"
                android:layout_height="34dp"
                android:text="300$"
                android:textAlignment="textEnd"
                android:textColor="#D3D3D3"
                android:textSize="15sp"
                android:textStyle="bold" />
                <TextView
                    android:id="@+id/money2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="  200$"
                    android:textAlignment="textStart"
                    android:textColor="#00ff00"
                    android:textSize="15sp"
                    android:textStyle="bold" />




        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

